<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>

    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0" />
    <title>Home</title>
    <link rel="shortcut icon" href="favicon.png">

    <!-- CSS  -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="/Content/data/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="/Content/data/css/style.css" type="text/css" rel="stylesheet" media="screen,projection" />
</head>
<body>
    <nav class=" indigo darken-4" role="navigation">
        <div class="nav-wrapper container">
            <a id="logo-container" href="principal.html" class="brand-logo">Auto Safe <i class="material-icons">directions_car</i></a>

            <ul class="right hide-on-med-and-down">
                <li><a href="@Url.Action("Index","Chamado")"> <i class="material-icons"> assignment </i> Chamados</a></li>
                <li><a href="@Url.Action("Index","Sla")"><i class="material-icons">person-pin</i>Cadastrar SLA</a></li>
                <li>
                    <a class="dropdown-button" href="#!" data-activates="dropdown1">
                        Relatórios<i class="material-icons right">
                            assessment
                        </i>
                    </a>
                </li>
                <ul id='dropdown1' class='dropdown-content'>
                    <li><a href="@Url.Action("OpiniaoOficina","Report")">Relatório de Opinião das Oficinas</a></li>
                    <li><a href="@Url.Action("SlaChamados","Report")">Relatório de Chamados x SLA </a></li>
                    <li><a href="@Url.Action("TempoChamado","Report")">Relatório de Tenpo de Chamado</a></li>
                </ul>

            </ul>
            <a href="#" data-activates="slide-out" class="button-collapse"><i class="material-icons">menu</i></a>

        </div>
    </nav>

@{
    var chamados = (List<WebApplication1.Models.ChamadoModelExibicao>)ViewData["Chamados"];
    foreach (var item in chamados)
    {

    <div class="container">
        <h5>Dados do Cliente</h5>
        <div class="panel panel-default">
            <div class="panel-body">Nome: @item.NomeCliente</div>
            <div class="panel-body">CPF: @item.CPF</div>
            <div class="panel-body"> RG: @item.RG</div>
            <div class="panel-body"> Apolice: @item.NumApolice</div>
             </div>
        <h5>Dados do Veiculo</h5>
        <div class="panel panel-default">
            <div class="panel-body">Placa: @item.Placa</div>
            <div class="panel-body">Chassi: @item.Chassi</div>
            <div class="panel-body"> Modelo: @item.Modelo</div>
            <div class="panel-body"> Parte Colidida: @item.PartesVeiculoColidida</div>
            @if (item.veiclocomove)
            {<div class="panel-body"> Veiculo se Locomove: Sim</div> }
            else
            {
                <div class="panel-body"> Veiculo se Locomove: Não</div>
            }
        </div>
        <h5>Dados do Chamado</h5>
        <div class="panel panel-default">
            <div class="panel-body">Número Sinistro: @item.NumSinistro</div>

            <div class="panel-body">Data de Abertura do Chamado: @item.DataHoraAberturaChamado</div>
            <div class="panel-body">Data do Sinistro: @item.DataHoraChamado</div>
            <div class="panel-body"> Local: @item.Endereco Cidade: @item.CidadeEstado</div>
            <div class="panel-body"> Quantidade de veiculos envolvidos: @item.quantveic</div>
            <div class="panel-body"> Descrição: @item.DeescricaoChamado</div>
            <div class="panel-body"> Observação: @item.ObservacaoChamado</div>
            <div class="panel-body"> Status do Chamado: @item.Status</div>
        </div>


    </div>
        }

    }
    
    <footer class="page-footer indigo darken-4">
        <div class="container">
            <div class="row">
                <div class="col l6 s12">
                    <h5 class="white-text">Auto Safe</h5>
                    <p class="grey-text text-lighten-4">Serviço de Integração de Seguradora.</p>


                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Configurações</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Sair</a></li>
                        <li><a class="white-text" href="#!">Alterar Senha</a></li>
                    </ul>
                </div>
                <div class="col l3 s12">
                    <h5 class="white-text">Contato</h5>
                    <ul>
                        <li><a class="white-text" href="#!">Fale Conosco</a></li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright">
            <div class="container">
                © 2016 <a class="blue-text text-lighten-3" href="#!"> Auto Safe </a> - Todos os direitos reservados.
            </div>
        </div>
    </footer>


    <!--  Scripts-->
    <script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
    <script src="/Content/data/js/materialize.js"></script>
    <script src="/Content/data/js/init.js"></script>

</body>
</html>


